<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BoozeHound"
             x:Class="BoozeHound.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Editor x:Name="" Placeholder="Enter your date of birth" PlaceholderColor="SteelBlue"></Editor>
        <!-- <Editor x:Name="" Placeholder="Enter your country" PlaceholderColor="SteelBlue"></Editor> -->
        <Button Text="Can I drink?" Clicked="Handle_Clicked"/>
        <Label Text="Drink" x:Name="Lbl_drink"></Label>

    </StackLayout>

</ContentPage>
